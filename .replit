[[workflows.workflow]]
name = "Start Application"
author = 21943363
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"node.*server/index.ts\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"python.*document-forensics.py\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f node || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "sleep 3"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

