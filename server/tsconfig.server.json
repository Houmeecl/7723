{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",
    "outDir": "dist",
    "rootDir": "server",
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "strict": true
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules"]
}
